rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - allow users to read and write their own data
    match /users/{userId} {
      allow read: if true; // Allow reading for username checking
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == userId;
    }
    
    // Quizzes collection
    match /quizzes/{quizId} {
      // Allow anyone to read quizzes (for shared links)
      allow read: if true;
      
      // Allow authenticated users to create quizzes
      allow create: if request.auth != null;
      
      // Allow quiz creator to update/delete their quizzes
      allow update, delete: if request.auth != null && 
                                request.auth.uid == resource.data.createdBy;
    }
    
    // Quiz Results collection
    match /quizResults/{resultId} {
      // Allow anyone authenticated to read quiz results (for analytics)
      allow read: if request.auth != null;
      
      // Allow students to create their quiz results
      allow create: if request.auth != null;
      
      // Prevent updates and deletes
      allow update, delete: if false;
    }
  }
}
